{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "importHelpers": true,
    "declaration": true,
    "declarationDir": "lib/types",
    "removeComments": true,
    "jsx": "react",
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "lib": ["es6", "dom"],
    "stripInternal": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}